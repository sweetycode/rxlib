---
interface Props {
    title: string
    description?: string
    bodyClasses?: string
}

const {title, description, bodyClasses} = Astro.props
---

<!doctype html>
<html lang="en">
	<head class={bodyClasses ?? ''}>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
        {description && <meta name="description" content={description}/>}
        <slot name="head"/>
	</head>
	<body>
		<slot />
	</body>
</html>
